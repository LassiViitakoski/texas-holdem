{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2016",
    "moduleResolution": "Node"
  },
  "include": ["src/**/*.ts", "./**/*.d.ts"],
  "exclude": ["node_modules", "./.eslintrc.js"]
}
