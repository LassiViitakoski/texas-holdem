{
  "compilerOptions": {
    "declaration": true,
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "../../node_modules"
  ]
}